!!! 5
html(lang='en')
head
    title Shadowrun 5 Test
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    != css('lib/css/bootstrap')
    != css('lib/css/app')
body(ng-controller='MainController')
    .navbar.navbar-static-top
        .container
            .navbar-brand SRGen
    .container.ng-cloak(ng-cloak, ng-controller='PriorityCreationController')
        h1 {{char.name || text.ui.unnamedCharacter }}
        h2 Available Points
        table.table.table-condensed(ng-init="types =['specialAttributes', 'attributes', 'skills', 'skillGroups', 'karma']")
            thead
                tr
                    td
                    th Special Attributes
                    th Attributes
                    th Skills
                    th Skill Groups
                    th Karma
            tbody
                tr
                    th Available
                    td(ng-repeat='type in types') {{creation.points[type].available}}
                tr
                    th Used
                    td(ng-repeat='type in types', ng-class="{ info: 'creation.points[type].used < creation.points[type].available' }") {{creation.points[type].used}}
        tabset
            tab(heading='{{text.ui.tab.characterGeneration}}')
                h2
                form
                    div.row
                        .form-group.col-lg-3
                            label(for='char-name') {{text.ui.name}}
                            input.form-control(id='char-name', ng-model='char.name', type='text', placeholder='{{text.ui.namePlaceholder}}')
                        .form-group.col-lg-3
                            label(for='char-metatype') {{text.ui.metatype}}
                            select.form-control(id='char-metatype', ng-model='char.metatype.name', ng-options='name as text.metatype[name] for name in core.metatypes', ng-change='creation.setMetatype(char.metatype.name)')

                h2 Priorities
                priority-table(creation='creation')
            tab(heading='{{text.ui.tab.attributes}}')
                attribute-table(modifier='creation', char='char')
            tab(heading='{{text.ui.tab.magicOrResonance}}', disabled="'true'")
            tab(heading='Debug')
                table.table
                    tbody
                        tr
                            th creation
                            td {{creation}}

        != js('lib/js/angular')
        != js('lib/js/ui-bootstrap-tpls-0.4.0')
        != js('client/app')